    /* CSS for the sliding form */
    .partner-form {
      position: fixed;
      top: 0;
      right: -100%; /* Start off hidden */
      height: 100%;
      width: 400px; /* Adjust width as needed */
      background-color: #fff;
      transition: right 0.3s ease-in-out;
      padding: 20px;
      z-index: 1000; /* Ensure it's above other content */
    }
    .partner-form.show {
      right: 0; /* Slide in from the right */
    }
    .partner-form h2 {
      font-size: 24px;
      margin-bottom: 20px;
      color: #FF5733;
    }
    .partner-form label {
      font-size: 16px;
      margin-bottom: 10px;
    }
    .partner-form input,
    .partner-form select {
      width: calc(100% - 20px);
      padding: 10px;
      margin-bottom: 10px;
      border: 1px solid #ccc;
      border-radius: 5px;
    }
    .partner-form button {
      width: 100%;
      padding: 10px;
      background-color: #FF5733;
      color: #fff;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      font-size: 16px;
      transition: background-color 0.3s;
    }
    .partner-form button:hover {
      background-color: #435681;
    }
    .close-icon {
  position: absolute;
  top: 10px;
  right: 10px;
  font-size: 24px;
  cursor: pointer;
}
  </style>
   
